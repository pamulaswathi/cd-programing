#include <stdio.h>

char input[100];
int i = 0;

int match(char c) {
    if (input[i] == c) {
        i++;
        return 1;
    }
    return 0;
}

int A() {
    int back = i;

    if (match('a')) {
        if (match('b'))
            return 1;
    }

    i = back;
    if (match('a'))
        return 1;

    i = back;
    return 0;
}

int S() {
    int back = i;

    if (match('c')) {
        if (A()) {
            if (match('d')) {
                if (input[i] == '\0')  // ensure end of string
                    return 1;
            }
        }
    }

    i = back;
    return 0;
}

int main() {
    printf("Enter the input string: ");
    scanf("%s", input);

    i = 0;

    if (S())
        printf("String \"%s\" belongs to the given Grammar.\n", input);
    else
        printf("String \"%s\" does not belong to the given Grammar.\n", input);

    return 0;
}
